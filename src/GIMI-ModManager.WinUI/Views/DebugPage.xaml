<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="GIMI_ModManager.WinUI.Views.DebugPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:GIMI_ModManager.WinUI.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:GIMI_ModManager.WinUI.Models"
    d:DataContext="{d:DesignInstance Type=models:NewModModel}"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Horizontal">
                <MenuBar>
                    <MenuBarItem Title="Mods">
                        <MenuBarItem.Items>

                            <MenuFlyoutItem Text="Add Mod...">
                                <MenuFlyoutItem.KeyboardAccelerators>
                                    <KeyboardAccelerator Key="O" Modifiers="Control" />
                                </MenuFlyoutItem.KeyboardAccelerators>
                            </MenuFlyoutItem>
                        </MenuBarItem.Items>
                    </MenuBarItem>

                </MenuBar>

            </StackPanel>

            <Grid Grid.Column="1" HorizontalAlignment="Right">
                <InfoBar
                    IsClosable="False"
                    IsOpen="True"
                    Message="More than one skin selected"
                    Severity="Warning" />
            </Grid>

        </Grid>

        <Grid x:Name="MainArea" Grid.Row="1">
            <controls:DataGrid
                x:Name="ModListGrid"
                AutoGenerateColumns="False"
                CanUserReorderColumns="False"
                CanUserResizeColumns="True"
                GridLinesVisibility="All"
                ItemsSource="{x:Bind ViewModel.ModListVM.Mods}"
                SelectionMode="Single"
                Sorting="ModListGrid_OnSorting">
                <controls:DataGrid.Columns>
                    <controls:DataGridCheckBoxColumn
                        Width="SizeToCells"
                        Binding="{Binding IsEnabled, Mode=TwoWay}"
                        CanUserResize="False"
                        CanUserSort="True"
                        Header="ModEnabled"
                        IsReadOnly="True"
                        Tag="IsEnabled" />
                    <controls:DataGridTextColumn
                        Width="SizeToCells"
                        Binding="{Binding Name, Mode=OneWay}"
                        CanUserSort="True"
                        Header="Mod Name"
                        IsReadOnly="True"
                        Tag="Name" />
                </controls:DataGrid.Columns>
            </controls:DataGrid>
        </Grid>

    </Grid>
</Page>
