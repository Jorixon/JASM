<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="GIMI_ModManager.WinUI.Views.EasterEggPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:GIMI_ModManager.WinUI.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <StackPanel>
            <TextBlock Text="Let's GOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOO HIDDEN PAGE YESSSSSSSSSSSSSSSSSS 😎" />
        </StackPanel>


        <Grid Grid.Row="1">
            <TextBlock
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Text="If you can see this then the gif didn't load sadge..." />
            <Image
                x:Name="Image"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                ImageFailed="Image_OnImageFailed"
                Source="https://media.tenor.com/tDpElw3fCiQAAAAC/ez-clap.gif" />
        </Grid>


        <StackPanel Grid.Row="2">
            <TextBlock Text="C.C. (C-2) is Best girl fight me" />
        </StackPanel>

        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <TextBlock HorizontalAlignment="Left" Text="Also, I lost Furina 50/50 ;_;" />


            <Button
                Grid.Column="1"
                HorizontalAlignment="Right"
                Click="ButtonBase_OnClick"
                Content="⚠️ DO NOT PRESS THIS BUTTON ⚠️"
                PointerEntered="UIElement_OnPointerEntered"
                PointerExited="UIElement_OnPointerExited" />

        </Grid>

    </Grid>
</Page>
